@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<DotNetAssessmentKnila.Repository.StoredProcs.GetAllContactsDataResult>

<script src="~/js/bootstrap-sortable.js"></script>
<script src="~/js/moment.min.js"></script>
<link href="~/css/bootstrap-sortable.css" rel="stylesheet" />
<link rel="stylesheet"
      type="text/css"
      href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css" />

<h2>All Contacts</h2>

<a asp-action="CreateContact" class="btn btn-sm btn-primary">Create New Contact</a>
@*<a asp-action="GetReservation" class="btn btn-sm btn-secondary">Get Reservation</a>*@

<table id="contactListTBL" class="table table-sm table-bordered table-condensed sortable">
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="10">No Record's found.</td>
        </tr>

    }
    else
    {
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone No.</th>
                <th>Address</th>
                <th>Postal Code</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName  @item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.AddressLine1 @item.AddressLine2</td>
                    <td>@item.PostalCode</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.Country</td>

                    <td>

                        <a asp-action="EditContact" asp-route-id="@item.Id"
                           class="btn btn-info" style="margin-bottom:5px;">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>

                        <a asp-action="MapAddressData" asp-route-id="@item.Id"
                           class="btn btn-info">
                            <i class="glyphicon glyphicon-map-marker"></i>  View On Map
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    }
</table>



@*<script type="text/javascript"
        charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>*@
<script type="text/javascript"
        charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
    $(function () {
        $("#contactListTBL").dataTable();
    });
</script>