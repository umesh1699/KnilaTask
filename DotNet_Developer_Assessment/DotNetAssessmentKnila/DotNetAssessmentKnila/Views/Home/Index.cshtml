@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<DotNetAssessmentKnila.Repository.StoredProcs.GetAllContactsDataResult>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
<script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

<h2>All Contacts</h2>

<a asp-action="CreateContact" class="btn btn-sm btn-primary">Create New Contact</a>


<table id="contactListTBL" class="table table-sm table-bordered table-condensed ">
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="10">No Record's found.</td>
        </tr>

    }
    else
    {
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone No.</th>
                <th>Address</th>
                <th>Postal Code</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName  @item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.AddressLine1 @item.AddressLine2</td>
                    <td>@item.PostalCode</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.Country</td>

                    <td>

                        <a asp-action="EditContact" asp-route-id="@item.Id"
                           class="btn btn-info" style="margin-bottom:5px;">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>

                        <a asp-action="MapAddressData" asp-route-id="@item.Id"
                           class="btn btn-info">
                            <i class="glyphicon glyphicon-map-marker"></i>  View On Map
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    }
</table>

<script type="text/javascript">

    $(document).ready(function () {
        
        $("#contactListTBL").dataTable({

        });
    });

</script>